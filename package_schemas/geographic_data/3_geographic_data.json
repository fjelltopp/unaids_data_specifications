            "validators": "not_empty",
            "display_group": "Geographic Data"
        },
        {
            "field_name": "maintainer_email",
            "label": "Contact Email",
            "form_placeholder": "joe@example.com",
            "display_snippet": "email.html",
            "display_email_name_field": "maintainer",
            "validators": "email_validator",
            "display_group": "Geographic Data"
        },
        {
            "field_name": "notes",
            "label": "Description/Source",
            "form_snippet": "markdown.html",
            "default": "Subnational area boundaries agreeed with the country Ministry of Health staff for the purposes of generating estimates of the countries HIV epidemic.",
            "display_group": "Geographic Data"
        },
        {
            "field_name": "license_id",
            "label": "License",
            "form_snippet": "license.html",
            "default": "cc-by-igo",
            "classes": ["hidden"],
            "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
            "display_group": "Geographic Data"
        },
         {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "dataset_organization",
            "private": false,
            "visibility_classes": ["hidden"],
            "display_group": "Geographic Data"
        },        
        {
            "label": "Data Type",
            "field_name": "type_name",
            "preset": "hidden_value",
            "field_value": "Geographic Data",
            "display_group": "Geographic Data"
        },
        {
            "field_name": "org_to_allow_transfer_to",
            "preset": "org_to_allow_transfer_to",
            "display_group": "Geographic Data"
        }
    ],
    "resources": [
        {
            "name": "Geographic Data",
            "about": "A validated geographic dataset",
            "resource_type": "geographic-data",
            "resource_fields": [{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "Geographic Data"
            }, {
                "field_name": "schema",
                "preset": "hidden_value",
