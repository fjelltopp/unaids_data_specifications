{
    "scheming_version": 1,
    "dataset_type": "geographic-data-package-3",
    "name": "Geographic Data",
    "about": "Subnational area boundaries agreeed with the country Ministry of Health staff for the purposes of generating estimates of the countries HIV epidemic.",
    "about_url": "http://github.com/ckan/ckanext-scheming",
    "add_data_on_create": false,
    "dataset_fields": [{
            "field_name": "title",
            "label": "Title (autogenerated):",
